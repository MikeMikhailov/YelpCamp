<%- include('../partials/header'); %>

<div class="container">
  <h1 class="text-center mb-4">Edit <%= campground.name %></h1>
  <div class="row flex-column justify-content-start align-items-center">
    <form action="/campgrounds/<%= campground._id %>?_method=PUT"
      class="col-md-5" method="POST">
      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" name="campground[name]"
          id="name" placeholder="Enter name" value="<%= campground.name %>">
      </div>
      <div class="form-group">
        <label for="img">Image URL</label>
        <input type="text" class="form-control" name="campground[img]" id="img"
          placeholder="Enter Image URL" value="<%= campground.img %>">
      </div>
      <div class="form-group">
        <label for="price">Price</label>
        <input type="number" step=".01" min="0" class="form-control"
          name="campground[price]" id="price"
          placeholder="Enter Price for 1 night" value="<%= campground.price %>">
      </div>
      <div class="form-group">
        <label for="description">Campground Description</label>
        <textarea type="text" class="form-control"
          name="campground[description]" id="description" rows="3"
          placeholder="Enter Campground Description"><%= campground.description %></textarea>
      </div>
      <button type="submit"
        class="btn btn-primary btn-block mb-2">Update</button>
      <a href="/campgrounds" class="text-left">Go Back</a>
    </form>
  </div>
</div>

<%- include('../partials/footer'); %>
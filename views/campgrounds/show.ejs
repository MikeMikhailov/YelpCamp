<% include ../partials/header %>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">YelpCamp</p>
      <div class="list-group">
        <li class="list-group-item active">Info 1</li>
        <li class="list-group-item">Info 2</li>
        <li class="list-group-item">Info 3</li>
      </div>
    </div>
    <div class="col-md-9">
      <div class="card mb-5">
        <img src="<%= campground.img %>" class="card-img-top" />
        <div class="card-body">
          <h1 class="card-title"><a href="#"><%= campground.name %></a></h1>
          <h6 class="card-subtitle text-muted mb-2">9.00$/night</h6>
          <p class="card-text"><%= campground.description %></p>
        </div>
      </div>
      <div class="card mb-5">
        <div class="card-header d-flex justify-content-end">
          <a href="/campgrounds/<%= campground._id %>/comments/new" class="btn btn-success btn-sm">Add New Comment</a>
        </div>
        <div class="card-body">
          <% campground.comments.forEach(comment => { %>
          <div class="row">
            <div class="col-md-12 ">
              <p class="float-right">10 days ago</p>
              <h4><%= comment.author %></h4>
              <p><%= comment.text %></p>
            </div>
          </div>
          <% }); %>
        </div>
      </div>
    </div>
  </div>
</div>
<% include ../partials/footer %>
  },
  "devDependencies": {
    "eslint": "^6.4.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "glob": "^7.1.4",
    "js-beautify": "^1.10.2",
    "prettier": "^1.18.2"
  }
